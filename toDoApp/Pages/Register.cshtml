@page
@model toDoApp.Pages.RegisterModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Register";
}


<main class="form-signin w-100 m-auto">
    <form asp-page-handler="Form" method="post">
        <img class="mb-4" src="https://icon-library.com/images/todo-list-icon/todo-list-icon-17.jpg" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Register ToDo App</h1>

        <div class="form-floating">
            <input type="text" class="form-control" id="floatingInput" placeholder="Your Username" asp-for="NewUser.userName">
            <label for="floatingInput">Username</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" asp-for="NewUser.password">
            <label for="floatingPassword">Password</label>
        </div>
        <br />
        <button class="w-100 btn btn-lg btn-primary" type="submit">Register Now</button>
        <a asp-page="/Login">Sign In</a>
        <input type="hidden" asp-for="StatusMessageRegister"/>
        <input type="hidden" asp-for="StatusMessageRegisterTitle" />
        
    </form>
</main>
@section Scripts {
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        $(document).ready(function() {
            if ("@Model.StatusMessageRegister" != "")
                swal("@Model.StatusMessageRegisterTitle", "@Model.StatusMessageRegister", "warning");
        });
    </script>
}